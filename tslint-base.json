{
  "extends": "tslint:latest",
  "rules": {
    "array-bracket-spacing": [
      true,
      "always"
    ],
    "arrow-return-shorthand": true,
    "await-promise": true,
    "ban": [
      true,
      [ "window", "isNaN", "You can use Number.isNan() instead of isNaN()" ]
    ],
    "block-spacing": [
      true,
      "always"
    ],
    "comment-format": [
      true,
      "check-uppercase",
      "check-space",
      {
        "ignore-words": [ "TODO" ]
      }
    ],
    "cyclomatic-complexity": [
      true,
      15
    ],
    "dot-notation": true,
    "ext-variable-name": [
      true,
      ["class",                       "pascal"],
      ["interface",                   "pascal",   {"regex": "^I.*$"}],
      ["parameter",                   "camel"],
      ["property",    "public",       "camel"],
      ["property",    "private",      "camel",    "require-leading-underscore"],
      ["property",    "protected",    "camel",    "allow-leading-underscore"],
      ["function",                    "camel",    "allow-leading-underscore"],
      ["method",      "public",       "camel"],
      ["method",      "private",      "camel",    "require-leading-underscore"],
      ["method",      "protected",    "camel",    "allow-leading-underscore"]
    ],
    "handle-callback-err": [
      true,
      "^(err|error|e)$"
    ],
    "import-blacklist": [
      true,
      "rxjs",
      "lodash"
    ],
    "max-file-line-count": [
      true,
      600
    ],
    "max-line-length": [
      true,
      120
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": "instance-sandwich"
      }
    ],
    "no-any": true,
    "no-constant-condition": true,
    "no-duplicate-case": true,
    "no-duplicate-imports": true,
    "no-empty-character-class": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-floating-promises": [
      true,
      "JQueryPromise",
      "Bluebird"
    ],
    "no-for-in-array": true,
    "no-inferrable-types": false,
    "no-inner-declarations": true,
    "no-invalid-regexp": true,
    "no-irregular-whitespace": true,
    "no-regex-spaces": true,
    "no-magic-numbers": false,
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-namespace": [
      true,
      "allow-declarations"
    ],
    "no-sparse-arrays": true,
    "no-switch-case-fall-through": true,
    "no-unbound-method": true,
    "no-unexpected-multiline": true,
    "no-unnecessary-initializer": true,
    "no-void-expression": [
      true,
      "ignore-arrow-function-shorthand"
    ],
    "object-curly-spacing": [
      true,
      "always"
    ],
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive"
      }
    ],
    "prefer-function-over-method": [
      true,
      "allow-public"
    ],
    "prefer-literal": [
      true,
      "object",
      "function",
      "array"
    ],
    "prefer-method-signature": true,
    "promise-function-async": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "restrict-plus-operands": true,
    "strict-boolean-expressions": true,
    "strict-type-predicates": true,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock"
    ]
  }
}
