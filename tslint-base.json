{
  "extends": "tslint:latest",
  "rules": {
    "arrow-return-shorthand": true,
    "await-promise": true,
    "ban": [
      true,
      [ "window", "isNaN", "You can use Number.isNan() instead of isNaN()" ]
    ],
    "comment-format": [
      true,
      "check-uppercase",
      "check-space",
      {
        "ignore-words": [ "TODO" ]
      }
    ],
    "cyclomatic-complexity": [
      true,
      15
    ],
    "dot-notation": true,
    "ext-variable-name": [
      true,
      ["class",                 "pascal"],
      ["interface",             "pascal", {"regex": "^I.*$"}],
      ["parameter",             "camel"],
      ["property", "private",   "camel", "require-leading-underscore"],
      ["property", "protected", "camel", "allow-leading-underscore"],
      ["variable", "local",     "camel"],
      ["variable", "const",     "camel"],
      ["variable",              "camel"],
      ["method", "private",     "camel", "require-leading-underscore"],
      ["method", "protected",   "camel", "allow-leading-underscore"],
      ["function",              "camel"],
      ["default",               "camel"]
    ],
    "import-blacklist": [
      true,
      "rxjs",
      "lodash"
    ],
    "literal-spacing": [
      true,
      {
        "array": ["always"],
        "object": ["always"],
        "import": ["always"]
      }
    ],
    "max-file-line-count": [
      true,
      600
    ],
    "max-line-length": [
      true,
      120
    ],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": "instance-sandwich"
      }
    ],
    "multiline-arrow": [
      true,
      "require-parens"
    ],
    "no-any": true,
    "no-duplicate-imports": true,
    "no-floating-promises": [
      true,
      "JQueryPromise",
      "Bluebird"
    ],
    "no-for-in-array": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-magic-numbers": false,
    "no-mergeable-namespace": true,
    "no-misused-new": true,
    "no-namespace": [
      true,
      "allow-declarations"
    ],
    "no-switch-case-fall-through": true,
    "no-unbound-method": true,
    "no-unnecessary-initializer": true,
    "no-void-expression": true,
    "object-literal-sort-keys": false,
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "case-insensitive"
      }
    ],
    "prefer-function-over-method": [
      true,
      "allow-public"
    ],
    "prefer-literal": [
      true,
      "object",
      "function",
      "array"
    ],
    "prefer-method-signature": true,
    "promise-function-async": true,
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "restrict-plus-operands": true,
    "strict-boolean-expressions": true,
    "strict-type-predicates": true,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-preblock"
    ]
  }
}
